# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Crawl4AI Configuration
CACHE_DIR=./cache
CRAWL_RATE_LIMIT=10  # requests per minute
HEADLESS=true
USER_AGENT=Crawl4AI E-commerce Extractor/1.0

# JavaScript Rendering Configuration
JS_RENDERING=false  # Set to true to enable JavaScript rendering with Playwright
WAIT_FOR_LOAD=3000  # Time in milliseconds to wait after initial page load
WAIT_FOR_SELECTOR=  # Optional CSS selector to wait for (e.g., .product-title)
WAIT_FOR_FUNCTION=  # Optional JavaScript function to evaluate for page readiness

# Retry Configuration
MAX_RETRIES=3  # Maximum number of retry attempts
RETRY_DELAY=2.0  # Initial delay between retries in seconds
RETRY_BACKOFF_FACTOR=1.5  # Multiplication factor for exponential backoff
RETRY_JITTER=0.5  # Random jitter factor (0-1) to add to retry delays

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=product_extraction
DB_USER=postgres
DB_PASSWORD=postgres

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2000

# API Server Configuration
CRAWL4AI_API_HOST=0.0.0.0
CRAWL4AI_API_PORT=8000
CRAWL4AI_LOG_LEVEL=INFO

# API Authentication 
# (Optional - will be generated if not provided)
ADMIN_API_KEY=your_secure_admin_api_key_here
ADMIN_RATE_LIMIT=120

# Rate Limiting
RATE_LIMIT_WINDOW_SECONDS=60
DEFAULT_RATE_LIMIT=60 